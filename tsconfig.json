{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "preserveWatchOutput": true,
    "rootDir": "./src",
    "sourceMap": true,
    "target": "ESNext",
    "declaration": true,
    "declarationDir": "./declarations",
  },
  "include": ["*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.unit.ts",
    "**/*.integration.ts",
  ]
}
